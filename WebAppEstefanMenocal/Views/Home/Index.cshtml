@{

    ViewData["Title"] = "Home Page";
}

@model IEnumerable<WebAppEstefanMenocal.Models.Paciente>;

<div class="text-center ">
    <h1 class="alert-primary p-2">Lista de Pacientes GITHUB</h1>
   
</div>

<br />
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>Edad</th>                   
                </tr>
            </thead>
            <tbody>
                @{
                    foreach(var p in Model)
                    {
                        <tr>
                        <td>@p.Nombre</td>
                        <td>@p.Direccion</td>
                        <td>@p.Telefono</td>
                        <td>@p.Edad</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-outline-danger">Cancelar</button>
                <button class="btn btn-outline-primary">Guardar</button>
                 
            </div>
        </div>
    </div>
</div>